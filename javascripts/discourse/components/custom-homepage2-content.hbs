        const goingCount = post.event.stats.going;


        document.getElementById(elementId).textContent = `${goingCount} going`;
      } else {
        console.error(`Could not find the "going" count in API response for ${elementId}`);
      }
    })
    .catch(error => {
      console.error('Error fetching API data:', error);
    });
